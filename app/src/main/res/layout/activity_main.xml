<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-----------just color-----------" />

        <Button
            android:id="@+id/toast_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_normal" />

        <Button
            android:id="@+id/toast_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_success" />

        <Button
            android:id="@+id/toast_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_warning" />

        <Button
            android:id="@+id/toast_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_error" />

        <Button
            android:id="@+id/toast_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-----------anim-----------" />

        <Button
            android:id="@+id/toast_anim_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_anim_success" />

        <Button
            android:id="@+id/toast_anim_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_anim_warning" />

        <Button
            android:id="@+id/toast_anim_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_anim_error" />

        <Button
            android:id="@+id/toast_anim_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_anim_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-----------custom-----------" />

        <Button
            android:id="@+id/toast_custom_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_custom_logo" />

        <Button
            android:id="@+id/toast_custom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toast_custom_text" />
    </LinearLayout>


</ScrollView>